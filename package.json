{
	"name": "simple-ai-monorepo",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "npm run dev --workspace=@simple-ai/docs",
		"build": "npm run build --workspaces --if-present",
		"test": "npm run test -w create-simple-ai",
		"test:run": "npm run test:run -w create-simple-ai",

		"changeset": "changeset",
		"version": "changeset version",
		"release": "npm run build -w create-simple-ai && changeset publish",
		"check:release": "npm run check:release -w create-simple-ai"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7"
	}
}
