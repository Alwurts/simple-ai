{
	"name": "create-simple-ai",
	"version": "0.2.6",
	"description": "Create simple AI-powered full-stack applications",
	"repository": {
		"type": "git",
		"url": "https://github.com/Alwurts/create-simple-ai.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"bin": {
		"create-simple-ai": "./dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"start": "node dist/cli.js",
		"test": "vitest",
		"test:run": "vitest run",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"lint": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "npm run build",
		"check:release": "tsx scripts/pre-release-check.ts"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"commander": "^14.0.2",
		"execa": "^9.6.0",
		"fs-extra": "^11.3.2",
		"picocolors": "^1.1.1",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^24.10.0",
		"@vitest/ui": "^4.0.8",
		"tsup": "^8.5.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.8"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
