{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"react": ["./node_modules/@types/react"]
		},
		"allowJs": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"next-env.d.ts",
		"next.config.mjs",
		"src/scripts/**/*.mts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", "dist", "build", ".next"]
}
